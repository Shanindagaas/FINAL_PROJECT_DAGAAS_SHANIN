@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-danger mb-4">
            <i class="fas fa-exclamation-triangle me-3"></i>Error
        </h1>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted">
                <small>Request ID: <code>@Model.RequestId</code></small>
            </p>
        }

        <div class="card mb-4">
            <div class="card-body py-5">
                <h2 class="mb-4">@(Model.StatusCode != 0 ? $"Status Code: {Model.StatusCode}" : "An error occurred")</h2>
                <p class="lead mb-4">@(string.IsNullOrEmpty(Model.ErrorMessage) ? "Sorry, an error occurred while processing your request." : Model.ErrorMessage)</p>

                <div class="mt-5">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                        Return to Home
                    </a>
                    <button onclick="window.history.back()" class="btn btn-outline-secondary">
                        Go Back
                    </button>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.StackTrace) && Model.ShowStackTrace)
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Technical Details</h5>
                </div>
                <div class="card-body">
                    <div class="bg-light p-3 rounded">
                        <pre class="mb-0"><code>@Model.StackTrace</code></pre>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
