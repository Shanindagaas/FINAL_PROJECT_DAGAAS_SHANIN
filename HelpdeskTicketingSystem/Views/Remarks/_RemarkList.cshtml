@model IEnumerable<HelpdeskTicketingSystem.DTOs.RemarkDTO>

<div class="remarks-container">
    @if (Model != null && Model.Any())
    {
        foreach (var remark in Model.OrderByDescending(r => r.CreatedAt))
        {
            <div class="card mb-3">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <div>
                        <span class="fw-bold">@remark.UserName</span>
                        <span class="text-muted small">(@(remark.UserRole))</span>
                    </div>
                    <span class="text-muted small">
                        @remark.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                    </span>
                </div>
                <div class="card-body">
                    <p class="card-text">@remark.Content</p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-4">
            <p class="text-muted mb-0">No comments yet. Be the first to add a comment.</p>
        </div>
    }
</div>
