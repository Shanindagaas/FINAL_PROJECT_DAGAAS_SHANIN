@model HelpdeskTicketingSystem.DTOs.RemarkCreateDTO

<form asp-controller="Remarks" asp-action="Create" method="post">
    <input type="hidden" asp-for="TicketID" />

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Your Comment</label>
        <textarea asp-for="Content" class="form-control" rows="3" placeholder="Add your comment or update here..."></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-comment me-1"></i> Add Comment
        </button>
    </div>
</form>
